# i3 config file (v4)

# colors
set_from_resource $border       color0 #bf616aFF
set_from_resource $background   color0 #2b303bCC
set_from_resource $text         color8 #c0c5ceFF
set_from_resource $active       color4 #bf616aFF
set_from_resource $inactive     color7 #c0c5ceFF

set $bar-height  40
set $border-width 0

#for_window [class="^.*"] floating enable
#smart_gaps on

# font for window titles and bar
font pango:DejaVu Sans Mono 8

# use win key
set $mod Mod1

# use these keys for focus, movement, and resize directions
set $left   j
set $down   k
set $up     l
set $right  odiaeresis

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# control focused window when follows the mouse movements
focus_follows_mouse yes

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal -e fish
bindsym $mod+Return exec /usr/bin/xst

# kill focused window
bindsym $mod+Shift+q kill

# start a program launcher
#bindsym $mod+space exec "rofi -show drun -theme-str '#prompt { text-color: rgba(0,0,0,0%); }'"
bindsym $mod+space exec albert toggle

# change focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

# move focused window
bindsym $mod+Shift+$left    move left
bindsym $mod+Shift+$down    move down
bindsym $mod+Shift+$up      move up
bindsym $mod+Shift+$right   move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left     move left
bindsym $mod+Shift+Down     move down
bindsym $mod+Shift+Up       move up
bindsym $mod+Shift+Right    move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# set popups during fullscreen mode
popup_during_fullscreen smart

# customize workspace names
#set $WS1 "1:    Terminal "
#set $WS2 "2:    Files "
#set $WS3 "3:    Webbrowser "
#set $WS4 "4:    Music "
#set $WS5 "5:    Office "
#set $WS6 "6:    Graphic "
#set $WS7 "7:    "
#set $WS8 "8:    Chat "
#set $WS9 "9:    "

set $WS1 "1:    "
set $WS2 "2:    "
set $WS3 "3:    "
set $WS4 "4:    "
set $WS5 "5:    "
set $WS6 "6:    "
#set $WS7 "7:    "
#set $WS8 "8:    "
#set $WS9 "9:    "

# switch to workspace
bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
#bindsym $mod+7 workspace $WS7
#bindsym $mod+8 workspace $WS8
#bindsym $mod+9 workspace $WS9
#bindsym $mod+0 workspace $WS10

# move focused container to workspace and follow
bindsym $mod+Shift+1 move container to workspace $WS1; workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2; workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3; workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4; workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5; workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6; workspace $WS6
#bindsym $mod+Shift+7 move container to workspace $WS7; workspace $WS7
#bindsym $mod+Shift+8 move container to workspace $WS8; workspace $WS8
#bindsym $mod+Shift+9 move container to workspace $WS9; workspace $WS9

# startup applications
# multi-monitor and background
exec --no-startup-id ~/.local/bin/hdmi-check &
#exec --no-startup-id ~/.local/bin/blurme &
exec --no-startup-id xset s off -dpms &
exec --no-startup-id xset b 0 0 0 &
exec --no-startup-id fcitx &
exec --no-startup-id nm-applet &
exec --no-startup-id redshift &
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc &
exec --no-startup-id compton -b --config ~/.config/compton.conf &
exec --no-startup-id ~/.config/polybar/launch.sh &
exec --no-startup-id albert &
# LIVE wallpaper
#exec_always --no-startup-id "xwinwrap -ov -ni -fs -- mpv -wid WID --keepaspect=no --loop ~/.config/wall/wl7.gif" &

# assign classes
assign [class="Thunar"] $WS2
assign [class="Firefox"] $WS3
assign [class="Chromium"] $WS3
assign [class="Vlc"] $WS4
assign [class="Audacity"] $WS4
assign [class="(?i)libreoffice"] $WS5
assign [class="Gimp"] $WS6
assign [class="Darktable"] $WS6
assign [class="Inkscape"] $WS6
assign [class="Line"] $WS8

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3
bindsym $mod+Shift+e exec i3-msg exit
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -f 'pango:Monaco 8' -m 'Do you really want to exit?' -b ' Exit  ' 'i3-msg exit'"

# TITLEBAR FORMAT
# We first set the titlebar font size to a large size to get a good padding amount.
# We then use pango markup to force i3 to print with the desired font.
# This gives us large titlebars with a small font. :P
font pango:Monaco 24
for_window [class=".*"] title_format "<span font='Monaco 10'>  > %title</span>"

# BORDER
new_window pixel $border-width

# mousepad glitch fix
hide_edge_borders both

# show/hide border
bindsym $mod+shift+b [class="^.*"] border toggle

# toggle border
set $mode_border Toggle border: (1)OFF (2)NOR (3)BIG
bindsym $mod+b mode "$mode_border"

mode "$mode_border" {
    bindsym 1 mode "default", border pixel 0
    bindsym 2 mode "default", border pixel 5
    bindsym 3 mode "default", border pixel 10
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# FLOATING WINDOWS
#for_window [class="^.*"] floating enable
for_window [class="^python*"] floating enable
for_window [class="^nexus*"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable
for_window [title="RIGA$"] floating enable

# toggle tile/float
set $mode_tile Toggle tile/float: Tile (1) Float (2)
bindsym $mod+Shift+space mode "$mode_tile"

mode "$mode_tile" {
    bindsym 1 mode "default", [class="^.*"] floating disable, [class="^.*"] border toggle
    bindsym 2 mode "default", [class="^.*"] floating enable, [class="^.*"] border toggle, [class="^.*"] border toggle
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# GAPS
#smart_gaps on
gaps inner 60
gaps outer 30

# Toggle Gaps
set $mode_gaps Toggle gaps: (1)OFF (2)NORMAL (3)HUGE  
bindsym $mod+n mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym 1 mode "default", gaps inner all set 0, gaps outer all set 0
    bindsym 2 mode "default", gaps inner all set 30, gaps outer all set 20
    bindsym 3 mode "default", gaps inner all set 60, gaps outer all set 30
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# RESIZE
set $mode_resize Größe verändern
bindsym $mod+r mode "$mode_resize"

mode "$mode_resize" {
        bindsym $left   resize shrink width 10 px or 10 ppt
        bindsym $down   resize grow height 10 px or 10 ppt
        bindsym $up     resize shrink height 10 px or 10 ppt
        bindsym $right  resize grow width 10 px or 10 ppt

        bindsym Left    resize shrink width 20 px or 20 ppt
        bindsym Down    resize grow height 20 px or 20 ppt
        bindsym Up      resize shrink height 20 px or 20 ppt
        bindsym Right   resize grow width 20 px or 20 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# window colors         Border      Background  Text        Indicator   Child_Border
client.focused          $border     $background $text       $border     $border
client.unfocused        $background $background $background $background $background
client.urgent           $background $background $background $background $background
client.placeholder      $background $background $background $background $background
client.background       $background

# start i3bar to display a workspace bar
bar {
  #i3bar_command i3bar
  mode invisible
  position bottom
  height $bar-height
  tray_padding 8
  tray_output none
  font pango:Monaco 12
  strip_workspace_numbers yes
  status_command conky -c $HOME/.config/i3/conky/conkyrc

  colors {
    background $background
    statusline $text
    separator $background
    #class             border   bg            text
    focused_workspace  $active  $active       $background
    active_workspace   $border  $background   $active
    inactive_workspace $border  $background   $inactive
    urgent_workspace   $border  $background   $inactive
  }
}

# toggle i3bar
bindsym --release $mod+m bar mode toggle

# Audio
bindsym --release XF86AudioRaiseVolume exec --no-startup-id ~/.local/bin/volume.sh up
bindsym --release XF86AudioLowerVolume exec --no-startup-id ~/.local/bin/volume.sh down
bindsym --release XF86AudioMute exec --no-startup-id ~/.local/bin/volume.sh mute

# sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 2
bindsym Shift+XF86MonBrightnessUp exec xbacklight -inc 15
bindsym XF86MonBrightnessDown exec xbacklight -dec 2
bindsym Shift+XF86MonBrightnessDown exec xbacklight -dec 15

# redshift
bindsym --release $mod+ctrl+r exec ~/.local/bin/red.sh

# toggle bluetooth
bindsym --release $mod+ctrl+b exec ~/.local/bin/blue.sh

# toggle wifi
bindsym --release $mod+ctrl+w exec ~/.local/bin/wifi.sh

# vlc
bindsym --release Mod4+Down exec --no-startup-id audioinfo vlc --action playpause && cmus-remote -u
bindsym --release Mod4+Left exec --no-startup-id audioinfo vlc --action prev && cmus-remote -r && ~/.local/bin/cmus-notify.sh -Q
bindsym --release Mod4+Right exec --no-startup-id audioinfo vlc --action next && cmus-remote -n && ~/.local/bin/cmus-notify.sh -Q
bindsym --release Mod4+Up exec --no-startup-id cmus-remote -s

# monitor
bindsym --release $mod+d exec --no-startup-id /home/rene/.local/bin/hdmi-check
bindsym --release XF86Display exec --no-startup-id /home/rene/.local/bin/hdmi-check

# lock screen
bindsym $mod+Shift+x exec ~/.local/bin/i3lock-blur

# screenshot
bindsym --release Print exec --no-startup-id scrot /tmp/`date +%Y%m%d_%H%M%S`.png && exec notify-send 'SCROT' 'Screenshot taken (/tmp)'
bindsym --release $mod+p exec --no-startup-id scrot /tmp/`date +%Y%m%d_%H%M%S`.png && exec notify-send 'SCROT' 'Screenshot taken (/tmp)'

